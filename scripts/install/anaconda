#/bin/bash

TMP="$DOTFILES/tmp"
mkdir $TMP

cd $TMP
wget -O - https://www.anaconda.com/distribution/ 2>/dev/null | sed -ne 's@.*\(https:\/\/repo\.anaconda\.com\/archive\/Anaconda3-.*-Linux-x86_64\.sh\)\">64-Bit (x86) Installer.*@\1@p' | xargs wget -O anaconda.sh

bash anaconda.sh

conda create -n default

rm -rf $TMP
